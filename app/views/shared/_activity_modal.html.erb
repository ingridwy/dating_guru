<button type="button" class="add-booking-button" data-toggle="modal" data-target="#exampleModalLong">
  Add to plan
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">

        <h5 class="modal-title" id="exampleModalLongTitle">Which plan would you like to add?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <% current_user.bookings.where(activity: nil).each do |booking| %>
          <div class="d-flex justify-content-between b-card-item">
          <div style="flex: 1" class="b-name ml-4">
           <%= booking.restaurant.name %>
          </div>
           <%= cl_image_tag booking.restaurant.photo.key,class: "b-photo", height: 100, width: 150 %>
           <%= link_to "Add to plan", add_activity_path(booking_id: booking.id, activity_id: @activity.id), method: :patch, class: 'small-booking-button' %>
          </div>
          <hr class="mb-4 mt-4">

          <% end %>
          <div class="text-center">
          <%#= link_to "", activity_new_booking_path(activity_id: @activity.id), method: :post, class: 'small-booking-button' %>
          <button type="button" class="btn btn-info "><%= link_to "Create a new plan",  restaurants_path %></button>
        </div>
      </div>
    </div>
  </div>
</div>
