<button type="button" class="add-booking-button" data-toggle="modal" data-target="#exampleModalLong">
  Add to plan
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add to plan</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>
        <%= link_to "Create new plan", activity_new_booking_path(activity_id: @activity.id), method: :post, class: 'small-booking-button' %>
        </p>
        <p>
        <% current_user.bookings.where(activity: nil).each do |booking| %>
          <p class="d-flex justify-content-between b-card-item">
           <%= booking.restaurant.name %>
           <%= cl_image_tag booking.restaurant.photo.key,class: "b-photo", height: 100, width: 150 %>
           <%= link_to "Add to plan", add_activity_path(booking_id: booking.id, activity_id: @activity.id), method: :patch, class: 'small-booking-button' %>
          <% end %>
          </p>
          </p>
      </div>
    </div>
  </div>
</div>
