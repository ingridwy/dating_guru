<div class="container">
  <h1 class="text-center m-4">Your date plan.</h1>

    <div class="boooking-activity-restaurant">
      <!-- activity card -->
      <div>
        <% if @booking.activity_id %>
          <h2>Activity</h2>

            <p><%= @booking.activity.name %></p>
            <%= cl_image_tag @booking.activity.photo.key,class: "b-photo", height: 350, width: 450 %>
            <p><%= @booking.activity.address %></p>
            <p><%= @booking.activity.open_hour %></p>
            <p><%= @booking.activity.phone_number %></p>
            <% end %>

      </div>

      <!-- booking card -->
      <div>
         <% if @booking.restaurant_id %>
          <h2>Restaurant</h2>

            <p><%= @booking.restaurant.name %></p>
            <%= cl_image_tag @booking.restaurant.photo.key,class: "b-photo", height: 350, width: 450 %>
            <p><%= @booking.restaurant.address %></p>
            <p><%= @booking.restaurant.price %></p>
            <p><%= @booking.restaurant.open_hour %></p>
            <p><%= @booking.restaurant.phone_number %></p>
            <p><%= @booking.restaurant.category %></p>
            <% end %>
      </div>
    </div>

      <div>
        <% if @booking.confirmed %>
          <p>Plans confirmed for: </p>
          <p><%= @booking.date %></p>
        <% else %>
          <%= simple_form_for @booking do |f| %>
            <%= f.input :date, html5: true, input_html: { value: Date.today, min: Date.today } %>
            <%= f.submit "  Confirm  ", class: 'btn btn-dark btn-lg active mb-4 p-12 active toggle'   %>
          <% end %>
        <% end %>
        <p>Estimated cost of your date:</p>
        <p>Between Â£<%= "#{(@booking.activity&.minimum_price || 0) + (@booking.restaurant&.minimum_price || 0)} - #{(@booking.activity&.price || 0) + (@booking.restaurant.price || 0)}" %></p>
      </div>
  </div>



  <div id="map" class="mt-5"
      style="height: 400px !important; width: 1000px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      data-routes="true">
  </div>


</div>



