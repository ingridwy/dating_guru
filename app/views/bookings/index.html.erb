<h1 class="text-center mt-4 mb-5">Your date plans.</h1>

<div class="book-index-container container">
  <% @bookings.each do |booking| %>
  <div class ="book-cards">
      <%= link_to booking_path(booking) do %>
      <p class="booking-date"><%= booking.date%></p>
        <% if booking.restaurant %>
          <div class="d-flex justify-content-between b-card-item">
          <%= booking.restaurant.name %>
          <%= cl_image_tag booking.restaurant.photo.key,class: "b-photo", height: 150, width: 200 %>
          </div>
        <% end %>
      <% if booking.activity %>
        <div class="d-flex justify-content-between b-card-item">
          <%= booking.activity.name %>
          <%= cl_image_tag booking.activity.photo.key,class: "b-photo", height: 150, width: 200 %>
        </div>

        <% if booking.confirmed %>
          <p>Booking Confirmed <i class="fas fa-calendar-check"></i></p>
          <% else %>
          <p>Not yet confirmed <i class="fas fa-exclamation-triangle"></i></p>
        <% end %>
      <% end %>
          <%= link_to booking_path(booking), method: :delete do %>
            <p><i class="fas fa-trash mb-5"></i> Delete</p>
          <% end %>
      <% end %>
    </div>
  <% end %>
</div>


