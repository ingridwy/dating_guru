<div class="container login-page text-center">

  <h2 class="log-in-header">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>
<div class="form-inputs">
      <div class="credentials pb-3">
        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="form-inputs">
          <%= f.input :password,
                      label: "New password",
                      required: true,
                      autofocus: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      label: "Confirm your new password",
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>
    </div>

    <div class="form-actions" role="button" aria-pressed="true">
      <%= f.button :submit, "Change my password", class: 'btn btn-dark btn-md active mb-3' %>
    </div>
  <% end %>
  <div>
    <%= render "devise/shared/links" %>
  </div>
  <%= render "devise/shared/links" %>
</div>
