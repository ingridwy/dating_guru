<div class="container login-page text-center">

  <h2 class="log-in-header">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <div class="credentials pb-3">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>

    <div class="form-actions" role="button" aria-pressed="true">
      <%= f.button :submit, "Log in", class: 'btn btn-dark btn-md active pb-2'%>
    </div>

  <% end %>

    <div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
