<h2>Restaurant show page</h2>
<%= @restaurant.name %>
<%= @restaurant.category %>
<%= @restaurant.address %>
<%= @restaurant.price %>
<%= @restaurant.open_hour %>
<%= @restaurant.phone_number %>
<%= link_to "Add to booking", set_restaurant_path(@restaurant), method: :patch %>

<%=  simple_form_for [@review] do |f| %>
  <% f.input :rating %>
  <% f.input :content %>
  <% f.submit %>
<% end %>
