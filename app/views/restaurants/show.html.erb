<% Restaurant show page %>
<%= @restaurant.name %>
<%= @restaurant.category %>
<%= @restaurant.address %>
<%= @restaurant.price %>
<%= @restaurant.open_hour %>
<%= @restaurant.phone_number %>
<%= link_to "Add to booking", set_restaurant(@restaurant), method: :patch %>

<%=  simple_form_for [@restaurant,@review] do |f| %>
  <% f.input :rating %>
  <% f.input :content %>
  <% f.submit %>
<% end %>
